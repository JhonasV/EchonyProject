@model EchonyCore.Models.UsuarioViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    @using Microsoft.AspNetCore.Http
   @inject IHttpContextAccessor HttpContextAccessor
    ViewBag.title = "Echony: Buscador";
    string NickName = this.HttpContextAccessor.HttpContext.Session.GetString("nick");

}

<div class="full-container-busqueda">



    

    <div class="busqueda-container">
        <div class="titulo_container">
            <h2></h2>
        </div>
        @if (Model.lista.Count == 0)
    {

            <h3>No pudimos encontrar al usuario</h3>
    }
    else
    {



        @foreach (var user in Model.lista)
    {
        if (user.Id == Model.UsuarioSesion.Id)
        {
            <div class="perfil">
                <div>  <img src="~/images/Fotos_Usuarios/@user.Foto.RutaFoto" /></div>
                <div class="info">
                    <div><a href="@Url.Action("Usuario", "Perfil", new Usuario {NickName = user.NickName, Id = user.Id})"><span>@user.Nombre </span> <span>@user.Apellido</span></a></div>

                </div>

            </div>

    }
    else
    {
        <div class="perfil">
            <div>  <img src="~/images/Fotos_Usuarios/@user.Foto.RutaFoto" /></div>
            <div class="info">
                <div><a href="@Url.Action("Usuario", "Perfil", new Usuario {NickName = user.NickName, Id = user.Id})"><span>@user.Nombre </span> <span>@user.Apellido</span></a></div>
                <div> <input type="button" name="name" value="Agregar" />   </div>
            </div>

        </div>
}

}
}
    </div>
       
</div>

<div class="buscador_wrapper">
    <div>
        <div class="header_buscador">

        </div>
        <div class="main_buscador">
            <div>
                <div><img src="#" alt="Alternate Text" /></div>
                <div> <a> Nelson Veras</a> </div>
            </div>
        </div>
        
    </div>

</div>